{
  "source": ["properties/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "class-styles.css",
          "format": "custom/format/css-classes",
          "filter": "isClass"
        },
        {
          "destination": "token-styles.css",
          "format": "css/variables",
          "filter": "isDesignToken"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_classes.scss",
          "format": "custom/format/scss-classes",
          "filter": "isClass"
        },
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "filter": "isDesignToken"
        }
      ]
    },
    "assets/embed/scss": {
      "transforms": ["attribute/cti", "name/cti/kebab"],
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "assets_icons.scss",
          "format": "scss/icons",
          "filter": {
            "attributes": {
              "category": "content",
              "type": "icon"
            }
          }
        }
      ]
    }
  }
}
