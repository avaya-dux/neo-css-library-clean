{
  "source": ["properties/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_classes.scss",
          "format": "custom/format/scss-classes",
          "filter": "isClass"
        },
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "filter": "isDesignToken"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "format": "javascript/es6",
          "destination": "tokens.js",
          "filter": "isDesignToken"
        }
      ]
    },
    "ios-swift": {
      "transformGroup": "ios-swift",
      "buildPath": "build/ios-swift/",
      "files": [
        {
          "destination": "FontStyles.swift",
          "format": "ios-swift/class.swift",
          "className": "FontStyles",
          "filter": "isTextStyle"
        },
        {
          "destination": "ColorStyles.swift",
          "format": "ios-swift/class.swift",
          "className": "ColorStyles",
          "filter": "isColorStyle"
        }
      ]
    },
    "android": {
      "transformGroup": "android",
      "buildPath": "build/android/",
      "files": [
        {
          "destination": "font_dimens.xml",
          "format": "android/fontDimens"
        },
        {
          "destination": "colors.xml",
          "format": "android/colors"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "class-styles.css",
          "format": "custom/format/css-classes",
          "filter": "isClass"
        },
        {
          "destination": "token-styles.css",
          "format": "css/variables",
          "filter": "isDesignToken"
        },
        {
          "destination": "icons.css",
          "format": "css/variables",
          "filter": {
            "attributes": {
              "category": "content",
              "type": "icon"
            }
          }
        }
      ]
    }
  }
}
