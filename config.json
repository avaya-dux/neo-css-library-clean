{
  "source": ["properties/**/*.json"],
  "platforms": {
    "ios": {
      "transformGroup": "tokens-ios",
      "buildPath": "build/ios/",
      "prefix": "token",
      "files": [
        {
          "destination": "tokens-color.plist",
          "format": "ios/plist",
          "filter": {
            "type": "color"
          }
        },
        {
          "destination": "tokens-typography.plist",
          "format": "ios/plist",
          "filter": {
            "attributes": {
              "category": "iOS-typography"
            }
          }
        },
        {
          "destination": "tokens-shadows.plist",
          "format": "ios/plist",
          "filter": {
            "attributes": {
              "category": "shadows"
            }
          }
        }
      ]
    },
    "android": {
      "transformGroup": "tokens-android",
      "buildPath": "build/android/",
      "prefix": "token",
      "files": [
        {
          "destination": "tokens-color.xml",
          "format": "android/xml",
          "filter": {
            "type": "color"
          }
        },
        {
          "destination": "tokens-typography.xml",
          "format": "android/xml",
          "filter": {
            "attributes": {
              "category": "Android-typography"
            }
          }
        },
        {
          "destination": "tokens-shadows.xml",
          "format": "android/xml",
          "filter": {
            "attributes": {
              "category": "shadows"
            }
          }
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "prefix": "token",
      "files": [
        {
          "destination": "_colors.scss",
          "format": "scss/variables",
          "filter": {
            "type": "color"
          }
        },
        {
          "destination": "_typography.scss",
          "format": "scss/variables",
          "filter": {
            "attributes": {
              "category": "Web-typography"
            }
          }
        },
        {
          "destination": "_shadows.scss",
          "format": "scss/variables",
          "filter": {
            "attributes": {
              "category": "shadows"
            }
          }
        }
      ]
    }
  }
}
