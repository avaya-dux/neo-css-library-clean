<div class="neo-table__actions">
  <div class="neo-table__actions--left">
    <form class="neo-form">
      <div class="neo-form-control neo-input-icon">
        <div class="neo-input-group">
          <div class="neo-input-icon__wrapper neo-input-editable__wrapper">
            <span class="neo-icon-search"></span>
            <input class="neo-input" placeholder="Search Animals" />
