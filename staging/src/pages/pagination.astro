---
import NeoLayout from '../layouts/NeoLayout.astro';
---

<NeoLayout title="Select">
  <nav class="neo-pagination" role="navigation" aria-label="pagination">
    <button class="neo-btn-square neo-pagination__arrow-btn neo-icon-arrow-left" role="button"
      aria-label="previous"></button>
    <div class="neo-multiselect" tabindex={0} aria-expanded="false" role="combobox" aria-haspopup="listbox"
      aria-label="multiselect">
      <div class="neo-multiselect-combo__header">
        <input class="neo-input" id="combobox" />
      </div>
      <div class="neo-multiselect__content">
        <ul role="listbox">
          <li role="option" aria-label="Page 1">
            <a href="#">1</a>
          </li>
          <li role="option" aria-label="Page 2">
            <a href="#">2</a>
          </li>
          <li role="option" aria-label="Page 3">
            <a href="#">3</a>
          </li>
          <li role="option" aria-label="Page 4">
            <a href="#">4</a>
          </li>
          <li role="option" aria-label="Page 5">
            <a href="#">5</a>
          </li>
          <li role="option" aria-label="Page 6">
            <a href="#">6</a>
          </li>
          <li role="option" aria-label="Page 7">
            <a href="#">7</a>
          </li>
          <li role="option" aria-label="Page 8">
            <a href="#">8</a>
          </li>
          <li role="option" aria-label="Page 9">
            <a href="#">9</a>
          </li>
          <li role="option" aria-label="Page 10">
            <a href="#">10</a>
          </li>
          <li role="option" aria-label="Page 11">
            <a href="#">11</a>
          </li>
        </ul>
      </div>
    </div>
    <div>/ 20 pages</div>
    <button class="neo-btn-square neo-pagination__arrow-btn neo-icon-arrow-right" role="button" aria-label="next"
      disabled></button>
  </nav>
</NeoLayout>
