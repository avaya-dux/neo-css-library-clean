---
import NeoLayout from "../layouts/NeoLayout.astro";
---

<NeoLayout title="Sidenav">
  <section>
    <h2>This page is a WIP</h2>
    <aside>Please do not use for production systems</aside>
  </section>

  <section class="sidenav-section">
    <h2>Multi-level Example</h2>

    <div class="neo-sidenav--wrapper">
      <nav class="neo-sidenav" aria-label="TODO: TRANSLATE ME">
        <ul class="neo-sidenav__nav">
          <li class="neo-sidenav__main">
            <a href="#home" class="neo-icon-home">Home</a>
          </li>

          <li
            class="neo-sidenav__main neo-sidenav__main--expand neo-sidenav__main--active"
          >
            <button
              class="neo-sidenav__category expandable neo-btn-secondary--info neo-btn neo-icon-dashboard"
              aria-label="Dashboards"
            >
              Dashboards
            </button>

            <ul class="neo-sidenav__nav">
              <li class="neo-sidenav__sub neo-sidenav__sub--active">
                <a href="#my-dashboard">My Dashboards</a>
              </li>

              <li class="neo-sidenav__sub">
                <a href="#team-dashboard">Team Dashboards</a>
              </li>
            </ul>
          </li>

          <li class="neo-sidenav__main neo-sidenav__main--expand">
            <button
              class="neo-sidenav__category expandable neo-btn-secondary--info neo-btn neo-icon-settings"
              aria-label="Advanced"
            >
              Advanced
            </button>

            <ul class="neo-sidenav__nav">
              <li class="neo-sidenav-category-group">
                <div class="neo-sidenav-category-group-label">Settings</div>

                <ul>
                  <li class="neo-sidenav__sub">
                    <a href="#applications">Applications</a>
                  </li>

                  <li
                    class="neo-sidenav-sub-category neo-sidenav-sub-category--expand"
                  >
                    <button type="button" class="neo-btn">Actions</button>

                    <ul>
                      <li class="neo-sidenav__sub">
                        <a href="#name">Name</a>
                      </li>

                      <li class="neo-sidenav__sub">
                        <a href="#parameters">Parameters</a>
                      </li>
                    </ul>
                  </li>
                </ul>
              </li>

              <li class="neo-sidenav-category-group">
                <div class="neo-sidenav-category-group-label">Reports</div>

                <ul>
                  <li class="neo-sidenav__sub">
                    <a href="#geography">Geography</a>
                  </li>

                  <li class="neo-sidenav__sub">
                    <a href="#devices">Devices</a>
                  </li>

                  <li class="neo-sidenav__sub">
                    <a href="#depth-chart">Depth Chart</a>
                  </li>
                </ul>
              </li>
            </ul>
          </li>

          <li class="neo-sidenav__main">
            <a href="#contact-center" class="neo-icon-address-book">
              Contact Center
            </a>
          </li>

          <li class="neo-sidenav__main">
            <button
              class="neo-btn neo-btn--default neo-btn-tertiary neo-btn-tertiary--default neo-icon-user"
              disabled=""
            >
              Admin
            </button>
          </li>
        </ul>
      </nav>
    </div>

    <div class="neo-sidenav--wrapper">
      <nav class="neo-sidenav" aria-label="TODO: TRANSLATE ME">
        <ul class="neo-sidenav__nav">
          <li class="neo-sidenav__main">
            <a href="#home" class="neo-icon-home">Home</a>
