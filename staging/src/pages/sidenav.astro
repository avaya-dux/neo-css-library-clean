            <button
              class="neo-sidenav__category expandable neo-btn-secondary--info neo-btn neo-icon-settings"
              aria-label="Advanced"
            >
              Advanced
            </button>

            <ul class="neo-sidenav__nav">
              <li class="neo-sidenav-category-group">
                <div class="neo-sidenav-category-group-label">Settings</div>

                <ul>
                  <li class="neo-sidenav__sub">
                    <a href="#applications">Applications</a>
                  </li>

                  <li
                    class="neo-sidenav-sub-category neo-sidenav-sub-category--active neo-sidenav-sub-category--expand"
                  >
                    <button type="button" class="neo-btn">Actions</button>

                    <ul>
                      <li class="neo-sidenav__sub">
                        <a href="#name">Name</a>
                      </li>

                      <li class="neo-sidenav__sub neo-sidenav__sub--active">
                        <a href="#parameters">Parameters</a>
                      </li>
                    </ul>
                  </li>
