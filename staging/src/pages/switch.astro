---
import NeoLayout from "../layouts/NeoLayout.astro";
---

<NeoLayout title="Switch">
  <form class="neo-form">
    <div class="neo-form-control">
      <div class="neo-input-group">
        <label class="neo-switch" for="uncheckedCheckbox">
          <input id="uncheckedCheckbox" type="checkbox" />

          <i class="neo-switch__icon"></i>

          I'm initially unchecked
        </label>

        <label class="neo-switch" for="checkedCheckbox">
          <input id="checkedCheckbox" type="checkbox" checked />

          <i class="neo-switch__icon"></i>

          I'm initially checked
        </label>
      </div>
    </div>
  </form>

  <form class="neo-form">
    <div class="neo-form-control">
      <div class="neo-input-group">

        <label class="neo-switch neo-switch--disabled" for="uncheckedDisabledCheckbox">
          <input id="uncheckedDisabledCheckbox" type="checkbox" disabled />

          <i class="neo-switch__icon"></i>

          I'm initially unchecked
        </label>

        <label class="neo-switch neo-switch--disabled" for="checkedDisabledCheckbox">
          <input id="checkedDisabledCheckbox" type="checkbox" checked disabled />

          <i class="neo-switch__icon"></i>

          <span>I'm initially checked</span>
        </label>
      </div>
    </div>
  </form>

  <form class="neo-form">
    <div class="neo-form-control">
      <div class="neo-input-group">
        <label class="neo-switch neo-switch--multiline" for="uncheckedMultilineCheckbox">
          <input id="uncheckedMultilineCheckbox" type="checkbox"/>
          <i class="neo-switch__icon"></i>
          <span class="neo-switch-children"><!-- white space is important here
          -->I'm Line 1 is a bit long
                  Line 2
            Line 3
          </span>
        </label>

        <label class="neo-switch neo-switch--multiline" for="checkedMultilineCheckbox">
          <input id="checkedMultilineCheckbox" type="checkbox" checked />
          <i class="neo-switch__icon"></i>
          <span class="neo-switch-children"
            >Line 1
            Line 2
            Line 3
          </span>
        </label>

        <label class="neo-switch neo-switch--multiline" for="checkedLongMultilineCheckbox">
          <input id="checkedLongMultilineCheckbox" type="checkbox" checked />
          <i class="neo-switch__icon"></i>
          <span class="neo-switch-children">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Beatae numquam necessitatibus, suscipit dolorum expedita laudantium dignissimos veniam ratione blanditiis. Modi dolorem quaerat ratione pariatur sapiente commodi excepturi, explicabo recusandae est!
          </span>
        </label>
      </div>
    </div>
  </form>
</NeoLayout>
