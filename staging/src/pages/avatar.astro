      data-initials="MD"
    >
      <img
        class="neo-img"
        src="/assets/images/avatar.svg"
        alt="Middle avatar"
      />
    </figure>
    <figure
      class="neo-avatar neo-avatar--large neo-avatar--alert"
      data-initials="MD"
    >
      <img
        class="neo-img"
        src="/assets/images/avatar.svg"
