---
import NeoLayout from "../layouts/NeoLayout.astro";
---

<NeoLayout title="Avatar">
  <h3>Avatars with borders</h3>
  <div class="avatar-wrapper">
    <figure
      class="neo-avatar neo-avatar--large neo-avatar--default"
      data-initials="MD"
    >
      <img
        class="neo-img"
        src="/assets/images/avatar.svg"
        alt="Middle avatar"
      />
    </figure>
    <figure
      class="neo-avatar neo-avatar--large neo-avatar--success"
      data-initials="MD"
    >
      <img
        class="neo-img"
        src="/assets/images/avatar.svg"
        alt="Middle avatar"
      />
    </figure>
    <figure
