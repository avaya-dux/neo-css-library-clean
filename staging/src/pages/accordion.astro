---
import NeoLayout from "../layouts/NeoLayout.astro";
import { StackedInteractiveAccordion } from "../components";
---

<NeoLayout title="Accordion">
  <h2>
    Interactive Example of Stacked Accordion (Opens one at a time) For Design
    Portal
  </h2>
  <div class="custom-accordion">
    <StackedInteractiveAccordion client:load />
  </div>
</NeoLayout>

<style>
  .custom-accordion {
    width: 500px;
    border: 1px solid #ccc;
    padding: 1em;
    height: 300px;
  }

  h2 {
    font-size: 20px;
  }
</style>
