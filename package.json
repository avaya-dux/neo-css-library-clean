{
  "name": "neo-css-library",
  "version": "0.0.1",
  "private": true,
  "author": "Mohammad Razian",
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn build:css && yarn build:staging",
    "build:css": "yarn workspace css-library build",
    "build:staging": "yarn workspace staging build",
    "dev": "yarn dev:css & yarn dev:staging",
    "dev:css": "yarn workspace css-library watch",
    "dev:staging": "yarn workspace staging start",
    "test": "jest --config ./jest.config.json",
    "test:watch": "jest --config ./jest.config.json --watchAll=true",
    "pull-icons": "cd figma-API && node -r esm design-system-functions.js && node -r esm ./icons-functions/icon-css-generator.js"
  },
  "workspaces": [
    "css-library",
    "staging"
  ]
}
